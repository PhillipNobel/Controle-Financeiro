# Database Configuration - MySQL NATIVE for local development
# Choose one of the options below based on your MySQL setup:

# Option 1: MAMP/XAMPP (default ports)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=8889
DB_DATABASE=controle_financeiro_local
DB_USERNAME=root
DB_PASSWORD=

# Option 2: MAMP Pro (uncomment if using MAMP Pro)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=8889
# DB_DATABASE=controle_financeiro_local
# DB_USERNAME=root
# DB_PASSWORD=root

# Option 3: Laravel Herd (uncomment if using Herd)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=controle_financeiro_local
# DB_USERNAME=root
# DB_PASSWORD=

# Option 4: Homebrew MySQL (uncomment if using Homebrew)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=controle_financeiro_local
# DB_USERNAME=root
# DB_PASSWORD=

# Native MySQL Optimizations
DB_STRICT_MODE=false
DB_ENGINE=InnoDB
DB_TIMEOUT=30
DB_PERSISTENT=false

# Cache Configuration - File-based for NATIVE development (maximum speed)
CACHE_STORE=file
CACHE_PREFIX=controle_financeiro_local

# Session Configuration - File-based for NATIVE development
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration - Database for NATIVE development
QUEUE_CONNECTION=database

# Mail Configuration - Log for development
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite Configuration for NATIVE development
VITE_APP_NAME="${APP_NAME}"
VITE_HOT_RELOAD=true
ASSET_URL=http://127.0.0.1:8000

# Development Tools (NATIVE)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true
QUERY_LOG_ENABLED=true
FEATURE_TESTING_ENABLED=true
SEED_DEMO_DATA=true

# Native Development Server Configuration
SERVER_PORT=8000

# Redis Configuration (optional for local development)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
