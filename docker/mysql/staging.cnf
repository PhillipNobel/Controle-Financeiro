# MySQL Configuration for Staging Environment
# Optimized for production-like testing with debugging capabilities

[mysqld]
# Basic Settings
default-storage-engine = InnoDB
default-table-type = InnoDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Connection Settings
max_connections = 100
max_connect_errors = 10000
wait_timeout = 600
interactive_timeout = 600

# Buffer Pool Settings (adjust based on available RAM)
innodb_buffer_pool_size = 256M
innodb_buffer_pool_instances = 2

# Log Settings
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 1

# Query Cache (disabled in MySQL 8.0+, but kept for compatibility)
query_cache_type = 0
query_cache_size = 0

# Temporary Tables
tmp_table_size = 32M
max_heap_table_size = 32M

# MyISAM Settings (for system tables)
key_buffer_size = 16M

# Thread Settings
thread_cache_size = 8
thread_stack = 256K

# Table Settings
table_open_cache = 1000
table_definition_cache = 400

# Binary Logging (for replication and point-in-time recovery)
log-bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 100M

# Error Logging
log-error = /var/log/mysql/error.log
log_error_verbosity = 2

# Slow Query Log (for performance monitoring)
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# General Query Log (disabled by default for performance)
general_log = 0
general_log_file = /var/log/mysql/general.log

# Security Settings
local_infile = 0
skip_show_database = 1

# InnoDB Settings
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 50
innodb_rollback_on_timeout = 1
innodb_print_all_deadlocks = 1

# SQL Mode (strict for staging to catch issues)
sql_mode = ONLY_FULL_GROUP_BY,STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION

# Performance Schema (enabled for monitoring)
performance_schema = ON
performance_schema_max_table_instances = 400
performance_schema_max_table_handles = 4000

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
quick
quote-names
max_allowed_packet = 16M
default-character-set = utf8mb4

[isamchk]
key_buffer_size = 16M