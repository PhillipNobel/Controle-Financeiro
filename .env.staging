# Staging Environment Configuration
# This file contains configuration for the VPS staging environment
# Used for testing production-like scenarios before actual production deployment

APP_NAME="Controle Financeiro - Staging"
APP_ENV=staging
APP_KEY=base64:CHANGE_THIS_FOR_STAGING
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo
APP_URL=https://staging.your-domain.com

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=2
BCRYPT_ROUNDS=12

# Logging Configuration - Detailed for staging debugging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration - MySQL via Docker
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=controle_financeiro_staging
DB_USERNAME=staging_user
DB_PASSWORD=CHANGE_THIS_STAGING_DB_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_STAGING_ROOT_PASSWORD

# SSL Database Connection for staging
DB_SSL_MODE=REQUIRED
DB_SSL_VERIFY_SERVER_CERT=false
DB_STRICT_MODE=true
DB_ENGINE=InnoDB
DB_TIMEOUT=60
DB_PERSISTENT=false

# Cache Configuration - Redis for production-like performance
CACHE_STORE=redis
CACHE_PREFIX=cf_staging_

# Session Configuration - Redis for scalability testing
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=staging.your-domain.com

# Broadcasting & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue Configuration - Redis for production-like behavior
QUEUE_CONNECTION=redis

# Redis Configuration - Docker container
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_STAGING_REDIS_PASSWORD
REDIS_PORT=6379

# Mail Configuration - Testing with real SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security Settings
SANCTUM_STATEFUL_DOMAINS=staging.your-domain.com
SESSION_SECURE_COOKIE=true

# SSL/HTTPS Configuration
FORCE_HTTPS=true
ASSET_URL=https://staging.your-domain.com

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Staging-specific settings
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=false

# Performance monitoring
PERFORMANCE_MONITORING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# Docker-specific configurations
DOCKER_MYSQL_ROOT_PASSWORD=CHANGE_THIS_DOCKER_ROOT_PASSWORD
DOCKER_MYSQL_DATABASE=controle_financeiro_staging
DOCKER_MYSQL_USER=staging_user
DOCKER_MYSQL_PASSWORD=CHANGE_THIS_DOCKER_USER_PASSWORD

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_SECRET=CHANGE_THIS_HEALTH_CHECK_SECRET

# Rate Limiting (more restrictive than local, less than production)
RATE_LIMIT_PER_MINUTE=120

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_LEVEL=warning

# Staging Environment Notes:
# - Uses MySQL and Redis via Docker containers
# - SSL/HTTPS enabled for production-like testing
# - Detailed logging for debugging staging issues
# - Performance monitoring enabled
# - Backup system configured
# - Rate limiting configured for realistic testing
# - Error reporting enabled for issue tracking